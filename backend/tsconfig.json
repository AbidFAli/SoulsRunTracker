{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "target": "es2020",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "incremental": true,
    "sourceMap" : true,
    "paths": {
      "#src/*": ["./src/*"],
      "#generated/*": ["./generated/*"]
    },
  },
  "lib": ["ES2023"],
  "include": ["./src/**/*", "./generated/**/*"],
  "exclude" : ["node_modules"]
}
