  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug backend script",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/backend/build/src/index.js",
      "outFiles": [
        "${workspaceFolder}/backend/build/**/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      // "env": {
      //   "DEBUG": "*"
      // }
    }, {
      "cwd": "${workspaceFolder}/backend",
      "type": "node",
      "request": "launch",
      "name": "Backend: Debug vitest integration test",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/backend/node_modules/vitest/vitest.mjs",
      "args": ["run", "--fileParallelism=false", "./build/src/test/integration/run.test.js"],
      "smartStep": true,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/backend/.env.test", //this only reads the .env file naively. It doesn't perform variable substitution
      "preLaunchTask": "backend integration test setup"
    }
  ]
}